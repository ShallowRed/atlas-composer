{
  "$schema": "./schema.json",
  "id": "world",
  "name": "World",
  "description": "Complete world map with all countries",
  "viewModes": ["unified"],
  "defaultViewMode": "unified",
  "projectionPreferences": {
    "recommended": [
      "natural-earth",
      "robinson",
      "mercator",
      "equirectangular",
      "miller",
      "eckert4",
      "winkel3"
    ],
    "default": {
      "mainland": "natural-earth",
      "overseas": "natural-earth"
    },
    "prohibited": [
      "conic-conformal-france",
      "conic-conformal-portugal",
      "conic-conformal-europe"
    ]
  },
  "territories": "*",
  "modes": [
    {
      "id": "all-territories",
      "label": "All territories",
      "territories": ["*"]
    },
    {
      "id": "all-except-antarctica",
      "label": "All except Antarctica",
      "territories": ["*"],
      "excludeTerritories": ["110"]
    }
  ]
}
