{
  "$schema": "./schema.json",
  "id": "world",
  "name": "World",
  "description": "World atlas with wildcard territory loading (work in progress)",
  "viewModes": ["unified"],
  "defaultViewMode": "unified",
  "dataSources": {
    "50m": {
      "territories": "world-countries-50m.json",
      "metadata": "world-metadata-50m.json"
    }
  },
  "projectionPreferences": {
    "recommended": [
      "natural-earth",
      "robinson",
      "mercator",
      "miller",
      "eckert4"
    ],
    "default": {
      "mainland": "natural-earth",
      "overseas": "natural-earth"
    }
  },
  "territories": "*",
  "modes": [
    {
      "id": "all-countries",
      "label": "All Countries",
      "territories": ["*"]
    },
    {
      "id": "without-antarctica",
      "label": "Without Antarctica",
      "territories": ["*"],
      "exclude": ["010"]
    }
  ]
}
