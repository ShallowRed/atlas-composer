{
  "name": "atlas-composer",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "imports": {
    "#types": "./types/index.ts",
    "#types/*": "./types/*.ts",
    "#scripts/*": "./scripts/*.ts"
  },
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:loader && tsc && vite build",
    "build:analyze": "ANALYZE=true pnpm build",
    "build:loader": "pnpm --filter @atlas-composer/projection-loader build",
    "preview": "vite preview",
    "typecheck": "pnpm typecheck:frontend && pnpm typecheck:scripts && pnpm typecheck:loader",
    "typecheck:frontend": "vue-tsc --noEmit -p src/tsconfig.json",
    "typecheck:scripts": "tsc --noEmit -p scripts/tsconfig.json",
    "typecheck:loader": "pnpm --filter @atlas-composer/projection-loader typecheck",
    "lint": "eslint --ext .ts,.tsx,.vue src",
    "lint:fix": "eslint --fix --ext .ts,.tsx,.vue src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build:scripts": "tsc -p scripts/tsconfig.json",
    "geodata:analyze": "tsx scripts/dev/analyze-country.ts",
    "geodata:lookup": "tsx scripts/dev/lookup-country.ts",
    "geodata:prepare": "tsx scripts/prepare-geodata.ts",
    "geodata:validate": "tsx scripts/validate-configs.ts",
    "export:config": "tsx scripts/export-config.ts",
    "export:all": "tsx scripts/export-all.ts",
    "import:config": "tsx scripts/import-config.ts"
  },
  "dependencies": {
    "@observablehq/plot": "^0.6.17",
    "d3": "^7.9.0",
    "d3-composite-projections": "^2.0.0",
    "d3-geo": "^3.1.1",
    "d3-geo-projection": "^4.0.0",
    "d3-path": "^3.1.0",
    "daisyui": "^5.1.26",
    "pinia": "^3.0.3",
    "proj4": "^2.19.10",
    "remixicon": "^4.6.0",
    "tailwindcss": "^4.1.14",
    "topojson-client": "^3.1.0",
    "vue": "^3.5.22",
    "vue-i18n": "9",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/d3": "^7.4.3",
    "@types/d3-geo": "^3.1.0",
    "@types/node": "^24.6.2",
    "@types/topojson-client": "^3.1.5",
    "@types/topojson-specification": "^1.0.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^13.9.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.36.0",
    "happy-dom": "^19.0.2",
    "rollup-plugin-visualizer": "^6.0.4",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  }
}
