{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Reuse frontend path mappings
    "paths": {
      "@/*": ["../src/*"],
      "@configs/*": ["../configs/*"]
    },
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "../dist/scripts",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
