{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "rootDir": "..",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "#configs/*": ["configs/*"],
      "#types/*": ["types/*"]
    },
    "types": ["node"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "../dist/scripts",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "../types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
