{
  "name": "@atlas-composer/projection-loader",
  "type": "module",
  "version": "1.0.0",
  "description": "Zero-dependency standalone loader for composite map projections with plugin architecture",
  "author": "Atlas Composer Contributors",
  "license": "MIT",
  "homepage": "https://github.com/ShallowRed/atlas-composer/tree/main/packages/projection-loader#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShallowRed/atlas-composer.git",
    "directory": "packages/projection-loader"
  },
  "bugs": {
    "url": "https://github.com/ShallowRed/atlas-composer/issues"
  },
  "keywords": [
    "cartography",
    "composite",
    "d3",
    "d3-geo",
    "geography",
    "gis",
    "map",
    "observable-plot",
    "projection",
    "tree-shakeable",
    "zero-dependencies"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./helpers": {
      "types": "./dist/d3-projection-helpers.d.ts",
      "import": "./dist/d3-projection-helpers.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "d3-geo": ">=3.0.0",
    "d3-geo-projection": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "d3-geo": {
      "optional": false
    },
    "d3-geo-projection": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/d3-geo": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "~5.9.3"
  }
}
